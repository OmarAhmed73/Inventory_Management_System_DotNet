@model MVC_CRUD.Entities.Models.Sales

@{
    ViewData["Title"] = "Sales Create";
}

<h1>Insert New Sale</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
           
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Product Name</label>
                @* <input asp-for="product.ProductName" class="form-control" /> *@
                <select asp-for="ProductId" class="form-control">
                    <option value="-1">--Select a Product--</option>
                    @{
                        foreach (var item in ViewBag.Products)
                        {
                            <option value="@item.ProductId">@item.ProductName</option>
                        }
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountSaled" class="control-label">Amount Saled</label>
                <input asp-for="AmountSaled" class="form-control" />
                <span asp-validation-for="AmountSaled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
